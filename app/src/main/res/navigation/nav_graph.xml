<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/repoListFragment">

    <fragment
        android:id="@+id/repoListFragment"
        android:name="com.mrwhoknows.gh_browser.ui.list_page.RepoListFragment"
        android:label="Github Browser"
        tools:layout="@layout/fragment_repo_list">
        <action
            android:id="@+id/action_repoListFragment_to_addRepoFragment"
            app:destination="@id/addRepoFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/repoListFragment" />
    </fragment>
    <fragment
        android:id="@+id/addRepoFragment"
        android:name="com.mrwhoknows.gh_browser.ui.add_page.AddRepoFragment"
        android:label="@string/add_repository" />
</navigation>